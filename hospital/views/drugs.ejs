<!DOCTYPE html>
<html>
  <head>
    <title>后台管理系统--首页</title>
    <Link rel = 'stylesheet' href = '/bootstrap/dist/css/bootstrap.min.css' />
    <Link rel = 'stylesheet' href = '/stylesheets/font-awesome.min.css' />
    <Link rel = 'stylesheet' href = '/stylesheets/ionicons.min.css' />
    <Link rel = 'stylesheet' href = '/admin-lte/dist/css/AdminLTE.min.css' />
    <Link rel = 'stylesheet' href = '/admin-lte/dist/css/skins/skin-blue.min.css' />
  </head>
  </head>
  <body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
 
   <!-- Main Header -->
   <%- include('./heard.ejs')  %>
   <!-- Left side column. contains the logo and sidebar -->
   <%- include('./menu.ejs')   %>
   <!-- Content Wrapper. Contains page content -->
   <div class="content-wrapper">
     <!-- Content Header (Page header) -->
     <section class="content-header">
       <h1>
        药品
       </h1>
       <ol class="breadcrumb">
         <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
         <li class="active">Here</li>
       </ol>
     </section>
 
     <!-- Main content -->
     <section class="content">
      <div class="box">
        <div class="box-header">
          <a href="/drugsadd"><button class="btn btn-xs btn-success">添加药品</button></a> 
        </div>
      
  
         <div class="box-body no-padding">
          <table class="table table-striped table-bordered">
            <tbody>
              <tr>
                <th class="text-center">id</th>
                <th class="text-center">名称</th>
                <th class="text-center">数量</th>
                <th class="text-center">规格</th>
                <th class="text-center">时间</th>
                <th class="text-center">操作</th>
              </tr>
        <% for (var i = 0; i < result.length;i++){  %>
                <tr>
                <th class="text-center"><%= result[i].id %></th>
                <th class="text-center"><%= result[i].name %></th>
                <th class="text-center"><%= result[i].num %></th>
                <th class="text-center"><%= result[i].spec %></th>
                <th class="text-center"><%= result[i].date %></th>
                <th class="text-center">
                  <a href="/detailDrugsAction?id=<%= result[i].id %>"><button class="btn btn-xs btn-warning">删除</button></a> 
                  <a href="/updataDrugsAction?id=<%= result[i].id %>"><button class="btn btn-xs btn-primary">编辑</button></a> 
                </th>
              </tr>
          <% } %>

          </tbody></table>
        </div>
       <!-- Your Page Content Here -->
 
     </section>
     <!-- /.content -->
   </div>
   <!-- /.content-wrapper -->
   <%- include('./sidebar.ejs')   %>
  
   <!-- Main Footer -->
   <%- include('./footer.ejs')   %>
   
   <!-- Control Sidebar -->
   
   <!-- /.control-sidebar -->
   <!-- Add the sidebar's background. This div must be placed
        immediately after the control sidebar -->
   <div class="control-sidebar-bg"></div>
 </div>
   </body>
  <script src = "/javascripts/jquery.min.js" ></script>
    <script src = "/bootstrap/dist/js/bootstrap.min.js" ></script>
    <script src = "/javascripts/app.min.js" ></script>
</html>
